<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/rec_dialog"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="10dp"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<Button
android:id="@+id/rec_start_bnt"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Start"
android:layout_alignParentLeft="true"
>
</Button>

<Button
    android:id="@+id/rec_stop_bnt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/rec_start_bnt"
    android:layout_alignBottom="@+id/rec_start_bnt"
    android:layout_marginLeft="31dp"
    android:layout_toRightOf="@+id/rec_start_bnt"
    android:text="Stop" />

<Button
    android:id="@+id/rec_close_bnt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/rec_stop_bnt"
    android:layout_alignBottom="@+id/rec_stop_bnt"
    android:layout_marginLeft="30dp"
    android:layout_toRightOf="@+id/rec_stop_bnt"
    android:text="Close" />

</RelativeLayout>